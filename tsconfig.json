{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "esnext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "outDir": "server",
      "baseUrl": ".",
      "experimentalDecorators": true,
      "allowJs": true,
      "rootDirs": [
          "./"
      ],
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}